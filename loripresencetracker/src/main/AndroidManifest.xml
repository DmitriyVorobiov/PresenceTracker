<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.vorobjev.loripresencetracker">

    <application
        android:name=".LoriPresenceTrackerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity android:name=".activity.NotesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.vorobjev.presencetracker.activity.ItemDetailsActivity"></activity>
    </application>

</manifest>
